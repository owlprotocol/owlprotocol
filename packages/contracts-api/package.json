{
  "name": "@owlprotocol/contracts-api",
  "version": "0.0.1",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/owlprotocol/contracts-api.git"
  },
  "homepage": "https://owlprotocol.github.io/contracts-api",
  "copyright": "Copyright 2023 Owl Protocol",
  "author": {
    "name": "Oscar Baracos",
    "email": "oscar@owlprotocol.xyz",
    "url": "https://github.com/owlprotocol"
  },
  "license": "MIT",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js"
    }
  },
  "files": [
    "dist/*",
    "lib/*",
    "src/*",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": "^16.0.0"
  },
  "scripts": {
    "express": "node lib/esm/runtimes/express.js",
    "dev:watch": "npm-run-all -p build:watch dev",
    "dev": "node-dev --deps 0 lib/esm/runtimes/express.js",
    "test": "mocha 'lib/esm/**/*.test.js'",
    "build": "npm-run-all -p tsc esbuild",
    "build:watch": "npm-run-all -p tsc:watch esbuild:watch",
    "esbuild": "node esbuild.config.mjs",
    "esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "clean": "rimraf lib dist",
    "prepublishOnly": "pnpm run test",
    "publish": "pnpm publish --no-git-checks --access public",
    "madge": "madge src/index.ts -c",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "offline": "rimraf .build && serverless offline",
    "deploy": "rimraf .build && serverless deploy",
    "ngrok": "ngrok http 3000"
  },
  "dependencies": {
    "@owlprotocol/contracts": "workspace:*",
    "@owlprotocol/contracts-proxy": "workspace:*",
    "@owlprotocol/contracts-sdk": "workspace:*",
    "@owlprotocol/zod-sol": "workspace:*",
    "@trpc/server": "^10.34.0",
    "cors": "^2.8.5",
    "ethers": "5.7.2",
    "express": "^4.18.2",
    "firebase": "^10.1.0",
    "firebase-admin": "^11.10.1",
    "lodash-es": "4.17.21",
    "node-fetch": "^3.3.1",
    "readmeio": "^6.2.0",
    "swagger-ui-express": "^5.0.0",
    "trpc-openapi": "^1.2.0",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@owlprotocol/envvars": "workspace:*",
    "@owlprotocol/esbuild-config": "workspace:*",
    "@owlprotocol/eslint-config": "workspace:*",
    "@owlprotocol/prettier-config": "workspace:*",
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.16",
    "@types/lodash-es": "4.17.6",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.26",
    "@types/swagger-ui-express": "^4.1.3",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "madge": "^5.0.2",
    "mocha": "^9.2.2",
    "node-dev": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "openapi-types": "^12.1.3",
    "rimraf": "^3.0.2",
    "serverless": "^3.22.0",
    "serverless-esbuild": "^1.32.8",
    "serverless-offline": "^9.2.6",
    "serverless-plugin-typescript": "^2.1.2",
    "ts-expect": "^1.3.0",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5",
    "wrangler": "^3.2.0"
  }
}
