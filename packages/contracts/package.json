{
  "name": "@owlprotocol/contracts",
  "version": "2.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/owlprotocol/owlprotocol.git"
  },
  "homepage": "https://github.com/owlprotocol/owlprotocol.git",
  "copyright": "Copyright 2023 Owl Protocol",
  "license": "MIT",
  "type": "module",
  "main": "./lib/cjs/index.cjs",
  "module": "./lib/esm/index.mjs",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "require": "./lib/cjs/index.js",
      "import": "./lib/esm/index.js"
    }
  },
  "files": [
    "dist/*",
    "lib/*",
    "!lib/forge-std",
    "src/*",
    "LICENSE",
    "README.md",
    "contracts/*"
  ],
  "scripts": {
    "build": "npm-run-all to:commonjs build:hardhat build:typechain build:deployments-export build:esm build:interfaceIds build:docs to:module",
    "build:esm": "npm-run-all build:esbuild build:tsc ",
    "build:watch": "npm-run-all -p build:tsc:watch build:esbuild:watch",
    "build:interfaceIds": "rm -f interfaceId/* && node lib/cjs/ethers/generateInterfaceIds.js",
    "build:deployments-export": "node generate-deployments-export.js",
    "build:typechain": "npm-run-all build:typechain:web3 build:typechain:ethers",
    "build:typechain:web3": "typechain --target web3-v1 --out-dir=src/typechain/web3 'src/artifacts/+(contracts|@openzeppelin|@chainlink|@opengsn)/**/+([a-zA-Z0-9_]).json'",
    "build:typechain:ethers": "typechain --target=ethers-v5 --show-stack-traces --out-dir=src/typechain/ethers 'src/artifacts/+(contracts|@openzeppelin|@chainlink|@opengsn)/**/+([a-zA-Z0-9_]).json'",
    "build:docs": "hardhat docgen && cp -R docs-contracts-reference/* ../docs/docs-contracts/reference",
    "build:esbuild": "node esbuild.config.mjs",
    "build:esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
    "build:tsc": "tsc --project tsconfig.build.json",
    "build:tsc:watch": "mkdir -p lib/types && cp -r src/typechain lib/types && tsc --project tsconfig.build.json -w",
    "build:hardhat": "hardhat compile",
    "clean": "rimraf lib cache src/artifacts src/typechain",
    "node": "npm run node:anvil",
    "node:anvil": "anvil",
    "node:hardhat": "hardhat node --no-deploy",
    "ipfs": "jsipfs daemon",
    "ipfs:configure": "jsipfs config --json API.HTTPHeaders.Access-Control-Allow-Methods '[\"PUT\", \"POST\"]' && jsipfs config --json API.HTTPHeaders.Access-Control-Allow-Origin '[\"http://127.0.0.1:5002\", \"http://localhost:3000\", \"http://127.0.0.1:5001\", \"https://webui.ipfs.io\"]'",
    "coverage": "hardhat coverage --solcoverjs .solcover.js --testfiles 'test/**/*.test.ts'",
    "coverage:gsn": "hardhat --network local coverage --solcoverjs .solcover.js --testfiles 'test/**/*.test.ts'",
    "test": "npm-run-all to:commonjs test-exec to:module",
    "test-exec": "hardhat test",
    "test:ERC721Mintable": "npm-run-all to:commonjs test-exec:ERC721Mintable to:module",
    "test-exec:ERC721Mintable": "hardhat test lib/cjs/test/assets/ERC721/ERC721Mintable.test.js",
    "test-grep": "npm-run-all to:commonjs test-grep-exec to:module",
    "test-grep-exec": "hardhat test $TEST_FILE",
    "deploy": "npm-run-all to:commonjs deploy:all to:module",
    "deploy:all": "hardhat deploy --tags All --network anvil",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "madge": "madge src/index.ts -c",
    "to:commonjs": "sed 's/\"type\": \"module\"/\"type\": \"commonjs\"/g' package.json > ./temp.package.json && mv ./temp.package.json package.json",
    "to:module": "sed 's/\"type\": \"commonjs\"/\"type\": \"module\"/g' package.json > ./temp.package.json && mv -f ./temp.package.json package.json"
  },
  "dependencies": {
    "lodash": "4.17.21"
  },
  "peerDependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@ethersproject/abi": "^5.4.0",
    "@ethersproject/contracts": "^5.4.1",
    "@ethersproject/providers": "^5.4.3",
    "@opengsn/contracts": "^2.2.6",
    "@openzeppelin/contracts-upgradeable": "^4.7.0",
    "ethers": "5.7.2",
    "web3": "1.8.0",
    "web3-core": "1.8.0",
    "web3-eth-contract": "1.8.0",
    "web3-utils": "1.8.0"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@ethereumjs/tx": "^3.5.2",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/contracts": "^5.6.2",
    "@ethersproject/providers": "^5.5.2",
    "@foundry-rs/hardhat": "^0.1.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@opengsn/cli": "^2.2.6",
    "@opengsn/common": "^2.2.6",
    "@opengsn/contracts": "^2.2.6",
    "@opengsn/dev": "^2.2.6",
    "@opengsn/provider": "^2.2.6",
    "@openzeppelin/contracts-upgradeable": "^4.7.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@owlprotocol/esbuild-config": "workspace:*",
    "@owlprotocol/eslint-config": "workspace:*",
    "@owlprotocol/prettier-config": "workspace:*",
    "@owlprotocol/utils": "workspace:*",
    "@typechain/ethers-v5": "10.2.0",
    "@typechain/web3-v1": "6.0.2",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.4",
    "@types/crypto-js": "^4.1.1",
    "@types/glob": "^7.2.0",
    "@types/lodash": "4.14.188",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.38",
    "@types/bn.js": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "add": "^2.0.6",
    "bn.js": "^5.2.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-ethers": "^0.0.1",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^3.4.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "5.7.2",
    "handlebars": "^4.7.7",
    "hardhat": "2.12.0",
    "hardhat-deploy": "^0.11.10",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-preprocessor": "^0.1.5",
    "hardhat-tracer": "1.1.0-rc.6",
    "ipfs-http-client": "56.0.0",
    "lint-staged": "^11.2.6",
    "madge": "^5.0.1",
    "merkletreejs": "^0.2.31",
    "mocha": "^9.1.4",
    "npm-run-all": "^4.1.5",
    "ow": "^1.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "solc-0.8": "npm:solc@^0.8.12",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.6.0-beta.29",
    "truffle": "^5.5.21",
    "ts-node": "^10.8.1",
    "typechain": "8.1.1",
    "typedoc": "^0.21.10",
    "typedoc-neo-theme": "^1.1.1",
    "typescript": "4.9.5",
    "uint8arrays": "^3.0.0",
    "web3": "1.8.0",
    "web3-core": "1.8.0",
    "web3-eth-contract": "1.8.0",
    "web3-providers-http": "1.8.0",
    "web3-utils": "1.8.0"
  }
}
